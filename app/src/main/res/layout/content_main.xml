<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawan.delhiheartinstitute.MainActivity"
    tools:showIn="@layout/app_bar_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rl1">

       <ViewFlipper
           android:id="@+id/ViewFlipper01"
           android:layout_width="fill_parent"
           android:layout_height="148dp" >

           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent">


               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/flip1"

                   android:id="@+id/iv1"
                   android:scaleType="fitXY" />

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical" >

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/flip2"
                   android:scaleType="fitXY"/>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/flip3"
                   android:scaleType="fitXY"/>

           </RelativeLayout>

       </ViewFlipper>

   </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fae9ce"
    android:layout_below="@id/rl1"
    android:id="@+id/ll1"
    android:layout_marginTop="10dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/doctors"
    android:textSize="20dp"
    android:id="@+id/tv1"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="--->"
        android:layout_below="@id/tv1"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#c72c2c"
        android:layout_marginLeft="230dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cacef2"
        android:layout_below="@id/ll1"
        android:id="@+id/ll2"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doctors"
            android:textSize="20dp"
            android:id="@+id/tv2"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="--->"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#c72c2c"
                        android:layout_marginLeft="230dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fae9ce"
        android:layout_below="@id/ll2"
        android:id="@+id/ll3"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doctors"
            android:textSize="20dp"
            android:id="@+id/tv3"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="--->"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#c72c2c"
            android:layout_marginLeft="230dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cacef2"
        android:layout_below="@id/ll3"
        android:id="@+id/ll4"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doctors"
            android:textSize="20dp"
            android:id="@+id/tv4"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="--->"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#c72c2c"
            android:layout_marginLeft="230dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
